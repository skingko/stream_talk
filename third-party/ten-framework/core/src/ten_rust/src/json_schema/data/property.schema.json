{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "logLevels": {
      "type": "integer",
      "format": "int8",
      "enum": [
        1,
        2,
        3,
        4,
        5,
        6
      ]
    },
    "non_empty_non_localhost_uri": {
      "type": "string",
      "format": "uri",
      "minLength": 1,
      "not": {
        "const": "localhost"
      }
    },
    "endpoint": {
      "type": "string",
      // example.com:8080, 127.0.0.1:3000, etc.
      "pattern": "^[a-zA-Z0-9._-]+:[0-9]{1,5}$"
    },
    "notEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "alphanumericCharacters": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
    },
    "path_in_msg_conversion": {
      "type": "string",
      // 1. Using X.Y.Z as a pattern, this represents object access.
      //    The number of connections with `.` can be unlimited.
      // 2. The rule for X/Y/Z/... is alphanumeric characters, or alphanumeric
      //    characters followed by `[]`, where the content inside the `[]` must
      //    only be numeric. This `[]` pattern represents array access.
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*(\\[\\d+\\])*(\\.[A-Za-z_][A-Za-z0-9_]*(\\[\\d+\\])*)*$"
    },
    "valueType": {
      "type": "string",
      "enum": [
        "bool",
        "int8",
        "int16",
        "int32",
        "int64",
        "uint8",
        "uint16",
        "uint32",
        "uint64",
        "float32",
        "float64",
        "string",
        "buf",
        "ptr",
        "array",
        "object"
      ]
    },
    "msgDest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "app": {
          "$ref": "#/$defs/notEmptyString"
        },
        "extension": {
          "$ref": "#/$defs/alphanumericCharacters"
        },
        "subgraph": {
          "$ref": "#/$defs/alphanumericCharacters"
        },
        "msg_conversion": {
          "$ref": "#/$defs/msgConversion"
        }
      },
      "oneOf": [
        {
          "required": [
            "extension"
          ],
          "not": {
            "required": [
              "subgraph"
            ]
          }
        },
        {
          "required": [
            "subgraph"
          ],
          "not": {
            "required": [
              "extension"
            ]
          }
        }
      ]
    },
    "msgSource": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "app": {
          "$ref": "#/$defs/notEmptyString"
        },
        "extension": {
          "$ref": "#/$defs/alphanumericCharacters"
        },
        "subgraph": {
          "$ref": "#/$defs/alphanumericCharacters"
        }
      },
      "oneOf": [
        {
          "required": [
            "extension"
          ],
          "not": {
            "required": [
              "subgraph"
            ]
          }
        },
        {
          "required": [
            "subgraph"
          ],
          "not": {
            "required": [
              "extension"
            ]
          }
        }
      ]
    },
    "graphNode": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "name"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "extension",
            "subgraph"
          ]
        },
        "name": {
          "$ref": "#/$defs/alphanumericCharacters"
        },
        "addon": {
          "$ref": "#/$defs/alphanumericCharacters"
        },
        "app": {
          "$ref": "#/$defs/notEmptyString"
        },
        "extension_group": {
          "$ref": "#/$defs/alphanumericCharacters"
        },
        "import_uri": {
          "type": "string",
          "format": "uri-reference",
          "minLength": 1
        },
        "property": {
          "type": "object",
          "propertyNames": { // The property name should be alphanumericCharacters.
            "$ref": "#/$defs/alphanumericCharacters"
          },
          "patternProperties": {
            "^[A-Za-z_][A-Za-z0-9_]*$": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                },
                {
                  "type": "object",
                  "$ref": "#/$defs/validPropertyObject"
                },
                {
                  "type": "array",
                  "items": {
                    "$ref": "#/$defs/validPropertyArrayItem"
                  }
                },
                {
                  "type": "boolean"
                }
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "extension"
              }
            },
            "required": [
              "type"
            ]
          },
          "then": {
            "required": [
              "addon"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "subgraph"
              }
            },
            "required": [
              "type"
            ]
          },
          "then": {
            "not": {
              "required": [
                "addon"
              ]
            }
          }
        }
      ]
    },
    "graphConnection": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "app": {
          "$ref": "#/$defs/notEmptyString"
        },
        "extension": {
          "$ref": "#/$defs/alphanumericCharacters"
        },
        "subgraph": {
          "$ref": "#/$defs/alphanumericCharacters"
        },
        "cmd": {
          "$ref": "#/$defs/extensionCmdsInGraph"
        },
        "data": {
          "$ref": "#/$defs/extensionDatasInGraph"
        },
        "video_frame": {
          "$ref": "#/$defs/extensionDatasInGraph"
        },
        "audio_frame": {
          "$ref": "#/$defs/extensionDatasInGraph"
        }
      },
      "oneOf": [
        {
          "required": [
            "extension"
          ],
          "not": {
            "required": [
              "subgraph"
            ]
          }
        },
        {
          "required": [
            "subgraph"
          ],
          "not": {
            "required": [
              "extension"
            ]
          }
        }
      ]
    },
    "msgConversion": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "rules"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "per_property"
          ]
        },
        "keep_original": {
          "type": "boolean"
        },
        "rules": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "path": {
                "$ref": "#/$defs/path_in_msg_conversion"
              },
              "conversion_mode": {
                "type": "string",
                "enum": [
                  "fixed_value",
                  "from_original"
                ]
              },
              "value": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "boolean"
                  },
                  {
                    "type": "number"
                  }
                ]
              },
              "original_path": {
                "$ref": "#/$defs/notEmptyString"
              }
            },
            "allOf": [
              {
                "if": {
                  "properties": {
                    "conversion_mode": {
                      "const": "fixed_value"
                    }
                  },
                  "required": [
                    "conversion_mode"
                  ]
                },
                "then": {
                  "required": [
                    "value"
                  ],
                  "not": {
                    "required": [
                      "original_path"
                    ]
                  }
                },
                "else": {
                  "if": {
                    "properties": {
                      "conversion_mode": {
                        "const": "from_original"
                      }
                    },
                    "required": [
                      "conversion_mode"
                    ]
                  },
                  "then": {
                    "required": [
                      "original_path"
                    ],
                    "not": {
                      "required": [
                        "value"
                      ]
                    }
                  }
                }
              }
            ]
          }
        },
        "result": {
          "$ref": "#/$defs/msgConversion"
        }
      }
    },
    "extensionDatasInGraph": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [],
        "properties": {
          "name": { // The api name should be alphanumericCharacters.
            "$ref": "#/$defs/alphanumericCharacters"
          },
          "dest": {
            "$ref": "#/$defs/msgDests"
          },
          "source": {
            "$ref": "#/$defs/msgSources"
          }
        },
        "oneOf": [
          {
            "required": [
              "dest"
            ]
          },
          {
            "required": [
              "source"
            ]
          }
        ]
      }
    },
    "extensionCmdsInGraph": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "properties": {
          "name": { // The api name should be alphanumericCharacters.
            "$ref": "#/$defs/alphanumericCharacters"
          },
          "dest": {
            "$ref": "#/$defs/msgDests"
          },
          "source": {
            "$ref": "#/$defs/msgSources"
          }
        },
        "oneOf": [
          {
            "required": [
              "dest"
            ]
          },
          {
            "required": [
              "source"
            ]
          }
        ]
      }
    },
    "msgDests": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/msgDest"
      }
    },
    "msgSources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/msgSource"
      }
    },
    "validPropertyObject": {
      "type": "object",
      "propertyNames": { // The property name should be alphanumericCharacters.
        "$ref": "#/$defs/alphanumericCharacters"
      },
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "object",
              "$ref": "#/$defs/validPropertyObject"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/validPropertyArrayItem"
              }
            },
            {
              "type": "boolean"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "validPropertyArrayItem": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        },
        {
          "type": "object",
          "$ref": "#/$defs/validPropertyObject"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/validPropertyArrayItem"
          }
        },
        {
          "type": "boolean"
        }
      ]
    },
    "tenConfiguration": {
      "type": "object",
      "properties": {
        "uri": {
          "$ref": "#/$defs/non_empty_non_localhost_uri"
        },
        // @{
        // TODO(Wei): The log_level and log_file below are for versions of ten
        // framework prior to 0.9. After most users have upgraded to 0.9, we
        // can and should remove the schema definitions for these 2 fields.
        "log_level": {
          "$ref": "#/$defs/logLevels"
        },
        "log_file": {
          "$ref": "#/$defs/notEmptyString"
        },
        // @}
        "log": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "level": {
              "$ref": "#/$defs/logLevels"
            },
            "file": {
              "$ref": "#/$defs/notEmptyString"
            },
            "encryption": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "algorithm": {
                  "type": "string",
                  "enum": [
                    "AES-CTR"
                  ]
                },
                "params": {
                  "if": {
                    "properties": {
                      "algorithm": {
                        "const": "AES-CTR"
                      }
                    },
                    "required": [
                      "algorithm"
                    ]
                  },
                  "then": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                      "key",
                      "nonce"
                    ],
                    "properties": {
                      "key": {
                        "type": "string"
                      },
                      "nonce": {
                        "type": "string"
                      }
                    }
                  },
                  "else": {
                    "type": "object"
                  }
                }
              }
            }
          }
        },
        "long_running_mode": {
          "type": "boolean"
        },
        "one_event_loop_per_engine": {
          "type": "boolean"
        },
        "addon": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "preload_all": {
              "type": "boolean"
            }
          }
        },
        "services": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "telemetry": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                }
              }
            },
            "api": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                }
              }
            }
          }
        },
        "path_timeout": {
          "oneOf": [
            {
              "type": "integer",
              "format": "int64"
            },
            {
              "type": "object",
              "properties": {
                "in_path": {
                  "type": "integer",
                  "format": "int64"
                },
                "out_path": {
                  "type": "integer",
                  "format": "int64"
                }
              }
            }
          ]
        },
        "path_check_interval": {
          "type": "integer",
          "format": "int64"
        },
        "predefined_graphs": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "$ref": "#/$defs/alphanumericCharacters"
              },
              "auto_start": {
                "type": "boolean",
                "default": false
              },
              "singleton": {
                "type": "boolean",
                "default": false
              },
              "import_uri": {
                "type": "string",
                "format": "uri-reference",
                "minLength": 1
              },
              "nodes": {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/graphNode"
                }
              },
              "connections": {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/graphConnection"
                }
              },
              "exposed_messages": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": [
                    "type",
                    "name"
                  ],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "cmd_in",
                        "cmd_out",
                        "data_in",
                        "data_out",
                        "audio_frame_in",
                        "audio_frame_out",
                        "video_frame_in",
                        "video_frame_out"
                      ]
                    },
                    "name": {
                      "$ref": "#/$defs/alphanumericCharacters"
                    },
                    "extension": {
                      "$ref": "#/$defs/alphanumericCharacters"
                    },
                    "subgraph": {
                      "$ref": "#/$defs/alphanumericCharacters"
                    }
                  },
                  "oneOf": [
                    {
                      "required": [
                        "extension"
                      ],
                      "not": {
                        "required": [
                          "subgraph"
                        ]
                      }
                    },
                    {
                      "required": [
                        "subgraph"
                      ],
                      "not": {
                        "required": [
                          "extension"
                        ]
                      }
                    }
                  ]
                }
              },
              "exposed_properties": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": [
                    "name"
                  ],
                  "properties": {
                    "extension": {
                      "$ref": "#/$defs/alphanumericCharacters"
                    },
                    "subgraph": {
                      "$ref": "#/$defs/alphanumericCharacters"
                    },
                    "name": {
                      "$ref": "#/$defs/alphanumericCharacters"
                    }
                  },
                  "oneOf": [
                    {
                      "required": [
                        "extension"
                      ],
                      "not": {
                        "required": [
                          "subgraph"
                        ]
                      }
                    },
                    {
                      "required": [
                        "subgraph"
                      ],
                      "not": {
                        "required": [
                          "extension"
                        ]
                      }
                    }
                  ]
                }
              }
            },
            "oneOf": [
              {
                "required": [
                  "import_uri"
                ],
                "not": {
                  "anyOf": [
                    {
                      "required": [
                        "nodes"
                      ]
                    },
                    {
                      "required": [
                        "connections"
                      ]
                    },
                    {
                      "required": [
                        "exposed_messages"
                      ]
                    },
                    {
                      "required": [
                        "exposed_properties"
                      ]
                    }
                  ]
                }
              },
              {
                "not": {
                  "required": [
                    "import_uri"
                  ]
                }
              }
            ]
          }
        }
      }
    }
  },
  "type": "object",
  "properties": {
    // @{
    // TODO(Wei): The _ten below is for versions of ten framework prior to 0.9.
    // After most users have upgraded to 0.9, we can and should remove the
    // schema definitions for the _ten field.
    "ten": {
      "$ref": "#/$defs/tenConfiguration"
    },
    "_ten": {
      "$ref": "#/$defs/tenConfiguration"
    }
    // @}
  },
  "patternProperties": {
    "^[A-Za-z_][A-Za-z0-9_]*$": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        },
        {
          "type": "object",
          "$ref": "#/$defs/validPropertyObject"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/validPropertyArrayItem"
          }
        },
        {
          "type": "boolean"
        }
      ]
    }
  },
  "additionalProperties": false
}